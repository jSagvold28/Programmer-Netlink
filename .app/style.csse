  .modal-overlay {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5); /* 50% transparent black */
    backdrop-filter: blur(5px); /* Adds a blur effect to the background */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
